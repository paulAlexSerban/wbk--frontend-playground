{
    "name": "@wbk--frontend-playground/core",
    "version": "2.2.0",
    "description": "",
    "author": "Paul Serban",
    "license": "MIT",
    "scripts": {
        "/": "Installation scripts",
        "install:libs": "yarn && bash scripts.bash install",
        "install:dashboard": "cd dashboard && yarn install && cd -",
        "install:assets": "cd assets/media && yarn install && cd -",
        "install:root": "yarn install",
        "install:all": "yarn install:root && yarn install:libs && yarn install:dashboard && yarn install:assets",
        "//": "Assets scripts",
        "process:assets": "cd assets/media && yarn process && cd -",
        "sync:libs:assets": "bash scripts.bash sync_assets",
        "sync:package:assets": "rsync -av --delete --exclude=.DS_Store --exclude=*.scss --exclude=*.js --exclude=*.html ./assets/media/dist/ ./package/libraries/assets/",
        "///": "Build scripts",
        "build:libs": "bash scripts.bash build",
        "build:dashboard": "yarn package && cd dashboard && yarn build && cd -",
        "build": "yarn build:libs && yarn build:dashboard && yarn sync:package:assets",
        "////": "Package scripts",
        "package": "bash scripts.bash package",
        "/////": "Code quality scripts",
        "formats:check": "yarn prettier --check .",
        "formats:write": "yarn prettier --write .",
        "lint": "yarn formats:check",
        "//////": "Git hooks & commit scripts",
        "prepare": "husky install && echo 'Husky installed!'",
        "commit": "yarn git-cz",
        "test": "echo 'Error: no test specified'",
        "///////": "Dev server scripts",
        "start": "serve package/libraries"
    },
    "dependencies": {
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.3",
        "serve": "^14.2.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
        }
    },
    "private": true
}
