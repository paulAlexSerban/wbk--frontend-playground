{{#> ./templates/dev-days-matrix/markup/partials/_dev-days-matrix-base title='Speech Text Reader' attributionFromHref='https://www.udemy.com/course/web-projects-with-vanilla-javascript/' attributionFromLabel='20 Web Projects With Vanilla JavaScript'}}
  {{{feLibs 'library' 'modules' 'text-reader' 'speech-text-reader' 'all'}}}

    <div class="container">
      <h1>Speech Text Reader</h1>
      <button id="toggle" class="btn btn-toggle">
        Toggle Text Box
      </button>
      <div id="text-box" class="text-box">
        <div id="close" class="close">X</div>
        <h3>Choose Voice</h3>
        <select id="voices"></select>
        <textarea id="text" placeholder="Enter text to read..."></textarea>
        <button class="btn" id="read">Read Text</button>
      </div>
      <main data-base-path="{{ assetsUrl 'images' '{0}-original.webp' }}"></main>
    </div>
  {{/ ./templates/dev-days-matrix/markup/partials/_dev-days-matrix-base}}