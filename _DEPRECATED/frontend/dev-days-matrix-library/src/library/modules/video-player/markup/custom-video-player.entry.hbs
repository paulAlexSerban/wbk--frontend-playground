{{#> ./templates/dev-days-matrix/markup/partials/_dev-days-matrix-base title='Form Validation' attributionFromHref='https://www.udemy.com/course/web-projects-with-vanilla-javascript/' attributionFromLabel='20 Web Projects With Vanilla JavaScript'}}
  {{{feLibs 'library' 'modules' 'video-player' 'custom-video-player' 'all'}}}

  <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous" />

  <h1>Custom Video Player</h1>
  <video src="{{assetsUrl 'videos' 'gone.mp4'}}" id="video" class="screen"
    poster="{{assetsUrl 'images' 'poster-480_360.webp'}}"></video>
  <div class="controls">
    <button class="btn" id="play">
      <i class="fa fa-play fa-2x"></i>
    </button>
    <button class="btn" id="stop">
      <i class="fa fa-stop fa-2x"></i>
    </button>
    <input type="range" id="progress" class="progress" min="0" max="100" step="0.1" value="0" />
    <span class="timestamp" id="timestamp">00:00</span>
  </div>
  {{/ ./templates/dev-days-matrix/markup/partials/_dev-days-matrix-base}}