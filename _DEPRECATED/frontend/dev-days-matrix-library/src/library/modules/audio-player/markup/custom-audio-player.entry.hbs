{{#> ./templates/dev-days-matrix/markup/partials/_dev-days-matrix-base title='Custom Audio Player' attributionFromHref='https://www.udemy.com/course/web-projects-with-vanilla-javascript/' attributionFromLabel='20 Web Projects With Vanilla JavaScript'}}
  {{{feLibs 'library' 'modules' 'audio-player' 'custom-audio-player' 'all'}}}

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css" />

  <h1>Music Player</h1>

  <div class="music-container" id="music-container">
    <div class="music-info">
      <h4 id="title"></h4>
      <div class="progress-container" id="progress-container">
        <div class="progress" id="progress"></div>
      </div>
    </div>

    <audio src="{{assetsUrl 'audio' 'ukulele.mp3'}}" data-base-path="{{assetsUrl 'audio' '{0}.mp3'}}" id="audio"></audio>

    <div class="img-container">
      <img src="{{assetsUrl 'images' 'ukulele-original.webp'}}" data-base-path="{{assetsUrl 'images' '{0}-original.webp'}}" alt="music-cover" id="cover" />
    </div>
    <div class="navigation">
      <button id="prev" class="action-btn">
        <i class="fas fa-backward"></i>
      </button>
      <button id="play" class="action-btn action-btn-big">
        <i class="fas fa-play"></i>
      </button>
      <button id="next" class="action-btn">
        <i class="fas fa-forward"></i>
      </button>
    </div>
  </div>

  {{/ ./templates/dev-days-matrix/markup/partials/_dev-days-matrix-base}}