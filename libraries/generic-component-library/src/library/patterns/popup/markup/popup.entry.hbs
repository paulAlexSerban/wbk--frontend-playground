{{#> templates/base/markup/partials/_base-demo-container use12ColGrid=true hasJS=true}}
  {{{feLibs 'library' 'components' 'button' 'button' 'css'}}}
  {{{feLibs 'library' 'components' 'typography' 'heading' 'css'}}}
  {{{feLibs 'library' 'components' 'typography' 'paragraph' 'css'}}}
    {{{feLibs 'library' 'patterns' 'popup' 'popup' 'all'}}}

  <div class="popup__base" data-js-pat="Popup">
        {{> components/button/markup/partials/_button
          style="primary" type="button" label="Open Popup" classNames="js-btn-open-popup"}}

    <div class="popup__wrapper js-popup-wrapper">
      <div class="popup__modal">
        <div class="popup__close js-popup-close">x</div>
        <div class="popup__content">
          <h2 class="heading__base heading__base--heading-200">NINJA SALE!!</h2>
          <p class="paragraph">50% off all ninja clothing. don't miss out!</p>
          {{> components/button/markup/partials/_button
            style="primary" type="button" label="View Clothing" classNames="js-popup-action"}}
        </div>
      </div>
    </div>
  </div>
  {{/ templates/base/markup/partials/_base-demo-container}}